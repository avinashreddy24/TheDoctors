<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/practo"
    tools:context="com.aug22.avinashchintareddy.thedoctors.fragments.Homescreen">

    <!-- TODO: Update blank fragment layout -->


    <android.support.v7.widget.CardView
        android:id="@+id/card_doctors"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="53dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        app:cardBackgroundColor="@android:color/transparent">

        <TextView
            android:id="@+id/txt_doctors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="60dp"
            android:text="Find A Doctor"
            android:textColor="#212f84"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/ic_search_black_24dp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_remainders"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/card_doctors"
        android:layout_alignEnd="@+id/card_pharmacis"
        app:cardBackgroundColor="@android:color/transparent">

        <TextView
            android:id="@+id/txt_remaind"
            android:layout_width="123dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="60dp"
            android:text="Reminder"
            android:textColor="#212f84"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/img_remaind"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/ic_search_black_24dp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_messages"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_below="@+id/card_doctors"
        android:layout_alignStart="@+id/card_doctors"
        android:layout_marginTop="11dp"
        app:cardBackgroundColor="@android:color/transparent">

        <ImageView
            android:id="@+id/img_msg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/ic_search_black_24dp" />

        <TextView
            android:id="@+id/txt_msg"
            android:layout_width="123dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="60dp"
            android:text="Message Doctor"
            android:textColor="#212f84"
            android:textSize="15sp" />
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/card_pharmacis"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/card_messages"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="13dp"
        app:cardBackgroundColor="@android:color/transparent">
        <ImageView
            android:id="@+id/img_pharma"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/ic_search_black_24dp" />

        <TextView
            android:id="@+id/txt_pharmacis"
            android:layout_width="123dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="60dp"
            android:text="Message Doctor"
            android:textColor="#212f84"
            android:textSize="15sp" />

        </android.support.v7.widget.CardView>
</RelativeLayout>

